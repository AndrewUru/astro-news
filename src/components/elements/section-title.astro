---
import ArrowRight01 from "@assets/svgs/arrow-right-01.astro";

type Props = {
  title: string;
  path: string;
};

const { title, path } = Astro.props;
---

<div class="flex items-center justify-between">
  <h2 class="text-xl font-semibold">{title}</h2>
  <a href={path} class="inline-flex items-center gap-1 group text-sky-800">
    <span>See all</span>
    <span class="group-hover:translate-x-1 transition-all duration-200"
      ><ArrowRight01 /></span
    >
  </a>
</div>
