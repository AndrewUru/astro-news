---
import { Image } from "astro:assets";
import { formatDistanceToNow, parseISO } from "date-fns";
import Time02 from "@assets/svgs/time-02.astro";
import DashboardSquare02 from "@assets/svgs/dashboard-square-02.astro";
import type { CollectionEntry } from "astro:content";
import { getDateDistance } from "@utils/getDateDistance";

type Props = {
  article: CollectionEntry<"articles">;
  isLast: boolean;
};

const { article, isLast } = Astro.props;
---

<li>
  <a href={`/news/${article.slug}`} class="flex flex-col md:flex-row gap-4">
    <div
      class="flex-shrink-0 aspect-square w-32 text-sm text-base-content/60 text-pretty capitalize hidden md:flex pt-1"
    >
      {getDateDistance(article.data.published_time)}
    </div>
    <div
      class:list={[
        "flex-1 flex flex-col gap-4 md:flex-row-reverse pb-2 md:pb-4",
        isLast ? "border-b-0" : "border-b",
      ]}
    >
      <div class="w-full md:w-60 aspect-video">
        <Image
          src={article.data.cover}
          alt={article.data.cover_alt}
          widths={[360, 768, article.data.cover.width]}
          loading="lazy"
          sizes={`(max-width: 360px) 360px, (max-width: 768px) 768px, (max-width: 1600px) 360px, ${article.data.cover.width}px`}
          class="aspect-video rounded w-full h-full"
        />
      </div>
      <div class="flex-1 space-y-2">
        <h3 class="text-xl font-semibold">
          {article.data.title}
        </h3>
        <p class="text-base-content/80 max-w-xl text-pretty">
          {article.data.description}
        </p>
      </div>
      <div
        class="text-sm md:hidden flex item-center gap-4 text-base-content/70 pt-2"
      >
        <time
          class="flex items-center gap-1"
          datetime={article.data.published_time}
        >
          <span>
            <Time02 size={16} />
          </span>
          <span>
            {
              formatDistanceToNow(parseISO(article.data.published_time), {
                addSuffix: true,
              })
            }
          </span>
        </time>
        <small class="flex items-center gap-1">
          <span>
            <DashboardSquare02 size={16} />
          </span>
          <span class="capitalize text-sm">
            {article.data.category.id}
          </span>
        </small>
      </div>
    </div>
  </a>
</li>
