---
import {Image}  from "astro:assets"
import image from "~/assets/images/default-image.jpg";
import Divider from "../bases/divider.astro";

---

<article class="col-span-1 group max-w-sm mx-auto">
    <a href="#"  class="flex flex-col gap-2">
        <div class="w-full aspect-[4/3] overflow-hidden">
            <Image src={image} alt={"title"} width={200} height={200} loading="lazy" class="rounded-md w-full h-full object-cover" />
        </div>
        <div class="flex flex-col">
            <div class="flex-1 flex flex-col gap-1">
                <h3 class="text-xl font-semibold flex-1 group-hover:underline">This is a headline</h3>
                <p class="text-sm text-base-content/80 line-clamp-4 text-balance">Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatem, quia!</p>
            </div>
            <div class="flex items-center text-xs text-base-content/80 mt-2">
                <span class="text-xs text-primary/80">Business</span>
                <Divider/>
                <span class="text-xs text-base-content/80">3 min read</span>
            </div>
        </div>
    </a>
</article>