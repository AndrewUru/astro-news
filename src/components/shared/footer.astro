---
import { Navigation, Social, otherLinks } from "~/lib/constants/config";
import Icon from "../bases/icon.astro";
---

<footer class="footer border-t border-base-content py-6">
  <div class="container">
    <div class="flex flex-col gap-4">
      <aside class="flex items-center gap-2">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          fill-rule="evenodd"
          clip-rule="evenodd"
          class="fill-current"
        >
          <path
            d="M22.672 15.226l-2.432.811.841 2.515c.33 1.019-.209 2.127-1.23 2.456-1.15.325-2.148-.321-2.463-1.226l-.84-2.518-5.013 1.677.84 2.517c.391 1.203-.434 2.542-1.831 2.542-.88 0-1.601-.564-1.86-1.314l-.842-2.516-2.431.809c-1.135.328-2.145-.317-2.463-1.229-.329-1.018.211-2.127 1.231-2.456l2.432-.809-1.621-4.823-2.432.808c-1.355.384-2.558-.59-2.558-1.839 0-.817.509-1.582 1.327-1.846l2.433-.809-.842-2.515c-.33-1.02.211-2.129 1.232-2.458 1.02-.329 2.13.209 2.461 1.229l.842 2.515 5.011-1.677-.839-2.517c-.403-1.238.484-2.553 1.843-2.553.819 0 1.585.509 1.85 1.326l.841 2.517 2.431-.81c1.02-.33 2.131.211 2.461 1.229.332 1.018-.21 2.126-1.23 2.456l-2.433.809 1.622 4.823 2.433-.809c1.242-.401 2.557.484 2.557 1.838 0 .819-.51 1.583-1.328 1.847m-8.992-6.428l-5.01 1.675 1.619 4.828 5.011-1.674-1.62-4.829z"
          ></path>
        </svg>
        <p>
          <strong class="text-lg"> Astro News </strong>
          <br />
          A news website open source built with <a
            class="underline"
            href="https://astro.build"
            target="_blank">Astro</a
          >.
        </p>
      </aside>
      <nav
        class="flex flex-col gap-4 lg:flex-row lg:flex-wrap text-base lg:text-sm font-semibold"
      >
        <a href="/" class="link link-hover">Home</a>
        <a href="/articles" class="link link-hover">Articles</a>
        {
          Navigation.map(({ href, text }) => (
            <a href={href} class="link link-hover">
              {text}
            </a>
          ))
        }
      </nav>
    </div>
    <div class="divider w-full h-1"></div>
    <div class="flex flex-col gap-4">
      <nav class="">
        <div class="flex gap-4">
          <p class="font-bold">Social Media:</p>
          <ul class="flex flex-wrap gap-4">
            {
              Social.map(({ href, icon, text }) => (
                <li>
                  <a href={href} class="link link-hover" target="_blank" title={text} aria-label={text}>
                    <Icon icon={icon} />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </nav>
      <nav class="flex flex-wrap gap-4 text-xs mt-2">
        {
          otherLinks.map(({ href, text }) => (
            <a href={href} class="link link-hover">
              {text}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>
