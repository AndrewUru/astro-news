---
type Props = {
  title: string;
  path: string;
};
const { title, path } = Astro.props;
---

<li class="mx-4 whitespace-nowrap flex items-center tex-base">
  <a
    href={`/news/${path}`}
    class="before:bg-accent before:w-3 before:h-3 before:inline-block before:rounded-full before:mr-2"
    >{title}</a
  >
</li>

<style>
  a::before {
    content: "";
  }
</style>
