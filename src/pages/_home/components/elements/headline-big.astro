---
import { Picture } from "astro:assets";
import defaultImage from "~/assets/images/default-image.jpg";
import Divider from "~/components/bases/divider.astro";
---

<article class="group">
  <a href="#" class="flex flex-col-reverse md:flex-col gap-4">
    <div class="aspect-video overflow-hidden rounded-md">
      <Picture
        src={defaultImage}
        alt="default image"
        layout="full-width"
        formats={["avif", "webp", "jpeg"]}
      />
    </div>
    <div class="flex flex-col gap-2">
      <div>
        <h2
          class="text-xl font-semibold group-hover:underline underline-offset-2"
        >
          This is a headline big
        </h2>
        <p class="text-base-content/90 text-base max-w-lg">
          Lorem ipsum dolor sit amet consectetur adipisicing elit.
        </p>
      </div>
      <div class="flex items-center text-xs text-base-content/80 mt-2 md:mt-4">
        <span class="text-primary">Business</span>
        <Divider/>
        <span>3 hrs ago</span>
      </div>
    </div>
  </a>
</article>
