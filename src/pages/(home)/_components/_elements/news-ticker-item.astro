---
type Props = {
  title: string;
  path: string;
};
const { title, path } = Astro.props;
---

<li class="mx-4 whitespace-nowrap flex items-center tex-base">
  <a href={path}>{title}</a>
</li>

<style>
  li::before {
    content: "";
    width: 10px;
    height: 10px;
    background-color: var(--green-500);
    border-radius: 50%;
    display: inline-block;
    margin-right: 8px;
  }
</style>
