---
import BaseLayout from "@layouts/base-layout.astro";
import type { Meta } from "@lib/types";
type Props = Meta & {};

const { ...meta } = Astro.props;
---

<BaseLayout {...meta}>
  <div class="container py-8 space-y-8">
    <div class="">
      <h1 class="text-2xl font-bold capitalize pb-1 border-b-2 border-primary">
        {meta.title}
      </h1>
    </div>
    <slot />
  </div>
</BaseLayout>
