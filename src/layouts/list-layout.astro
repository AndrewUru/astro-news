---
import BaseLayout from "@layouts/base-layout.astro";
type Props = {
  title: string;
};
const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="container py-8 space-y-8">
    <div class="">
      <h1 class="text-2xl font-bold capitalize pb-1 border-b-2 border-primary">
        {title}
      </h1>
    </div>
    <slot />
  </div>
</BaseLayout>
